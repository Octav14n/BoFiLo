{
  "manifest_version": 2,
  "name": "webextension",
  "version": "1.0",
  "description": "Detect Captcha and Extract innerHTML from webpages.",
  "browser_specific_settings": {
    "gecko": {
      "id": "webextension@bofilo.schnuff.eu"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.fanfiction.net/*", "*://archiveofourown.org/*"],
      "js": ["main.js"]
    },
    {
      "matches": ["*://challenges.cloudflare.com/*"],
      "js": ["captcha.js"],
      "all_frames": true
    }
  ],
  "permissions": [
    "nativeMessaging",
    "nativeMessagingFromContent",
    "geckoViewAddons"
  ]
}
